<iframe src="<%= APP_CONFIG['transmission'] %>" width="497" height="298" seamless></iframe>

<script>

	function resize() {

		$("iframe")
				.attr("width", $(window).width() - 45)
				.attr("height", $(window).height() - 45);
	}

	$(document).on("pageshow", function () {

		resize();

		$(document).on("orientationchange", function () {

			resize();
		});
	});

</script>